<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartActivity" >
    
    <RelativeLayout
        android:id="@+id/relativeLayoutForListViewOnLoginPage"
        android:layout_width="300dp"
        android:layout_height="370dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" >

        <ListView
            android:id="@+id/somethingUseful"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutForbuttonsViewOnLoginPage"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/guestLogin"
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:background="@drawable/custom_btn"
            android:text="GUEST LOGIN"
            android:textSize="40sp" />

        <Button
            android:id="@+id/artistLogin"
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:layout_above="@+id/guestLogin"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:background="@drawable/custom_btn"
            android:text="ARTIST LOGIN"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/artistLogin"
            android:layout_marginLeft="91dp"
            android:layout_toRightOf="@+id/artistLogin"
            android:text="Proctors/Artists Logged In"
            android:textSize="25sp" />

    </RelativeLayout>

</RelativeLayout>
