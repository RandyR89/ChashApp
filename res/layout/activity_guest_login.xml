<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GuestLogin" >

    <TextView
        android:id="@+id/waiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text=""
        android:textSize="16sp" />

    <Button
        android:id="@+id/proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/liabilityCheck"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@+id/liabilityCheck"
        android:minWidth="400dip"
        android:text="PROCEED"
        android:background="@drawable/custom_btn" />

    <CheckBox
        android:id="@+id/liabilityCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/waiver"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:text="I HAVE READ/AGREE TO THE ABOVE TERMS/CONDITIONS" />

</RelativeLayout>
