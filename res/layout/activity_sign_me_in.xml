<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/StudNumField"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SignMeIn" >

    <RelativeLayout
        android:id="@+id/signInRightSide"
        android:layout_width="440dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <EditText
            android:id="@+id/visAddressField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Personal Code"
            android:textSize="45sp" />

        <EditText
            android:id="@+id/snf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/visAddressField"
            android:layout_below="@+id/visAddressField"
            android:ems="10"
            android:text="Please enter your " />

        <Button
            android:id="@+id/testback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:onClick="goBack"
            android:text="Back To Main"
            android:background="@drawable/custom_btn"
            android:textSize="40sp" />

        <Button
            android:id="@+id/goForward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/testback"
            android:layout_alignParentLeft="true"
            android:background="@drawable/custom_btn"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="Proceed"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/starField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/goForward"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="34dp"
            android:ems="10"
            android:focusable="false"
            android:text="PIN" 
            >

            <requestFocus />
        </EditText>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signInLeftSide"
        android:layout_width="450dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="top" >

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button8"
            android:layout_alignBottom="@+id/button8"
            android:layout_toRightOf="@+id/button8"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="9"
            android:background="@drawable/custom_btn"
            android:textSize="70sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button4"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="8" 
            android:background="@drawable/custom_btn"
            android:textSize="70sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button8"
            android:background="@drawable/custom_btn"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="7"
            android:textSize="70sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button8"
            android:layout_toLeftOf="@+id/button5"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="4" 
            android:background="@drawable/custom_btn"
            android:textSize="70sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button4"
            android:layout_alignBottom="@+id/button4"
            android:layout_toLeftOf="@+id/button6"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="5" 
            android:background="@drawable/custom_btn"
            android:textSize="70sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button5"
            android:layout_alignBottom="@+id/button5"
            android:layout_alignLeft="@+id/ap_quit"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="6"
            android:background="@drawable/custom_btn" 
            android:textSize="70sp" />

        <Button
            android:id="@+id/visitorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button4"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="1" 
            android:background="@drawable/custom_btn"
            android:textSize="70sp" />

        <Button
            android:id="@+id/artistLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/visitorButton"
            android:layout_alignBottom="@+id/visitorButton"
            android:layout_toRightOf="@+id/visitorButton"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="2" 
            android:background="@drawable/custom_btn"
            android:textSize="70sp" />

        <Button
            android:id="@+id/ap_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/artistLogin"
            android:layout_alignBottom="@+id/artistLogin"
            android:layout_toRightOf="@+id/artistLogin"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="3"
            android:background="@drawable/custom_btn" 
            android:textSize="70sp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/artistLogin"
            android:layout_below="@+id/artistLogin"
            android:background="@drawable/custom_btn"
            android:minHeight="130dp"
            android:minWidth="260dp"
            android:text="Clear"
            android:textSize="70sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/visitorButton"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="0" 
            android:background="@drawable/custom_btn"
            android:textSize="70sp" />
    </RelativeLayout>

</RelativeLayout>