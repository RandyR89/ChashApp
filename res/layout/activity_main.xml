<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main" >

    <RelativeLayout
        android:id="@+id/main_top"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <EditText
            android:id="@+id/visNameField"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:text="Studio Number"
            android:textSize="40sp" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signInLeftSide"
        android:layout_width="450dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="top" >

        <Button
            android:id="@+id/main_button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/main_button8"
            android:layout_alignBottom="@+id/main_button8"
            android:layout_toRightOf="@+id/main_button8"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="9"
            android:background="@drawable/custom_btn" />

        <Button
            android:id="@+id/main_button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/main_button4"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="8" 
            android:background="@drawable/custom_btn"/>

        <Button
            android:id="@+id/main_button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/main_button8"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="7" 
            android:background="@drawable/custom_btn"/>

        <Button
            android:id="@+id/main_button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_button8"
            android:layout_toLeftOf="@+id/main_button5"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="4" 
            android:background="@drawable/custom_btn"/>

        <Button
            android:id="@+id/main_button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/main_button4"
            android:layout_alignBottom="@+id/main_button4"
            android:layout_toLeftOf="@+id/main_button6"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="5"
            android:background="@drawable/custom_btn" />

        <Button
            android:id="@+id/main_button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/main_button5"
            android:layout_alignBottom="@+id/main_button5"
            android:layout_alignLeft="@+id/main_button3"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="6" 
            android:background="@drawable/custom_btn"/>

        <Button
            android:id="@+id/main_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/main_button4"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="1"
            android:background="@drawable/custom_btn" />

        <Button
            android:id="@+id/main_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/main_button1"
            android:layout_alignBottom="@+id/main_button1"
            android:layout_toRightOf="@+id/main_button1"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="2"
            android:background="@drawable/custom_btn" />

        <Button
            android:id="@+id/main_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/main_button2"
            android:layout_alignBottom="@+id/main_button2"
            android:layout_toRightOf="@+id/main_button2"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="3" 
            android:background="@drawable/custom_btn"/>

        <Button
            android:id="@+id/main_button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/main_button2"
            android:layout_below="@+id/main_button2"
            android:minHeight="130dp"
            android:minWidth="260dp"
            android:text="Clear" 
            android:background="@drawable/custom_btn"/>

        <Button
            android:id="@+id/main_button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/main_button1"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:text="0"
            android:background="@drawable/custom_btn" />
    </RelativeLayout>

    <Button
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/signInLeftSide"
        android:layout_toRightOf="@+id/signInLeftSide"
        android:height="20dp"
        android:maxEms="100"
        android:maxWidth="360dp"
        android:minHeight="150dp"
        android:minWidth="400dp"
        android:onClick="SignIn"
        android:text="Proceed!" 
        android:background="@drawable/custom_btn"/>

    <TextView
        android:id="@+id/main_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signin"
        android:layout_centerVertical="true"
        android:text="Studio Number"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>